<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pointofsale">
    <!-- untuk intent camera permission -->
    <!-- untuk izin pada OS supaya apps dapat menggunakan camera -->
    <uses-permission android:name="android.permission.CAMERA" /> <!-- saat download apps yang menggunakan camera, maka akan dipastikan apakah device yang mau download memiliki camera atau tidak -->
    <uses-feature android:name="android.hardware.camera2" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PointOfSale">
        <activity android:name=".activity_fragment"
            android:windowSoftInputMode="adjustPan"/>
        <activity
            android:name=".Profile"/>
        <activity android:name=".login" />
        <activity android:name=".register" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>