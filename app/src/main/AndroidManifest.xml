<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pointofsale">

    <!-- untuk intent camera permission -->
    <!-- untuk izin pada OS supaya apps dapat menggunakan camera -->
    <uses-permission android:name="android.permission.CAMERA" /> <!-- saat download apps yang menggunakan camera, maka akan dipastikan apakah device yang mau download memiliki camera atau tidak -->
    <uses-feature android:name="android.hardware.camera2" />

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE " />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
<!--    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE " />-->

    <application
        android:name=".BaseNotification"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PointOfSale">
        <receiver
            android:name=".ChannelAndNotifReceiver"
            android:enabled="true"
            android:exported="true"></receiver>
        <receiver
            android:name=".AlarmReceiver"
            android:enabled="true"
            android:exported="true" />
        <receiver
            android:name=".NotificationReceiver"
            android:enabled="true"
            android:exported="true" />
        <receiver
            android:name=".NotificationReceiver"
            android:enabled="true"
            android:exported="true" />
        <receiver
            android:name=".MyBatteryReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.ACTION_POWER_CONNECTED" />
                <action android:name="android.intent.action.ACTION_POWER_DISCONNECTED" />
            </intent-filter>
        </receiver>

        <service
            android:name=".ServiceStock"
            android:enabled="true"
            android:exported="true" />
        <service
            android:name=".ItemView"
            android:enabled="true"
            android:exported="true"
            android:permission="android.permission.BIND_JOB_SERVICE"/>

        <activity
            android:name=".ActivityFragment"
            android:windowSoftInputMode="adjustPan"
            android:launchMode="singleTask"
            android:taskAffinity=""
            android:excludeFromRecents="true" />
        <activity android:name=".Profile" />
        <activity android:name=".Login" />
        <activity android:name=".Register" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name=".ActionDismissReceiver" />
    </application>

</manifest>